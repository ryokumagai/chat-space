.Chat
  .RightHeader
    .RightHeader__group
      .RightHeader__groupName
        test
      .RightHeader__memberList
        Member : masa
    = link_to "#", class: "RightHeader__editBtn" do
      Edit
  .MessageList
    = render @messages
  .MessageForm
    = form_with model: [@group,@message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputText' placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send' class: 'Form__btn'